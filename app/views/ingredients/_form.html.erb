
<div class="row">

  <% if @ingredient.errors.any? %>
      <%= pluralize(@ingredient.errors.count, "error") %> Oeps.

</div>
   

  <% end %>

<%= form_for(@ingredient) do |f| %>

    <%= f.label "Titel" %>
    <%= f.text_field :title %>


    <%= f.label "Omschrijving" %>
    <%= f.text_area :description %>


    <%= f.label "Locatie (adres)" %>
    <%= f.text_field :address %>

 


    <%= f.submit "Maken" %><br>

    <form>
  <div class="row">
    <div class="six columns">
      <label for="Naam">Naam ingrediënt</label>
      <input class="u-full-width" type="text" placeholder="test@mailbox.com" id="exampleEmailInput">
    </div>
    <div class="six columns">
      <label for="exampleRecipientInput">Reason for contacting</label>
      <select class="u-full-width" id="exampleRecipientInput">
        <option value="Option 1">Questions</option>
        <option value="Option 2">Admiration</option>
        <option value="Option 3">Can I get your number?</option>
      </select>
    </div>
  </div>
  <label for="exampleMessage">Message</label>
  <textarea class="u-full-width" placeholder="Hi Dave …" id="exampleMessage"></textarea>
  <label class="example-send-yourself-copy">
    <input type="checkbox">
    <span class="label-body">Send a copy to yourself</span>
  </label>
  <input class="button-primary" type="submit" value="Submit">
</form>


<% end %>
